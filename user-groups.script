# List users
cat /etc/passwd

# Create user
useradd -c 'SIMECA' -m -d simeca -p '<pass>' -U simeca

## Create user in chroot directory
useradd -c 'SIMECA' -m -d simeca -R <chroot path> -p '<pass>' -U simeca

# Define user pass
passwd <user>

# Create group
groupadd <group>

# Add user to group
usermod -aG <group> <username>
